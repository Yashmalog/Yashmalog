import os
import sys
import pyttsx3

def say(what):
    print(what)
    engine = pyttsx3.init()
    engine.say(what)
    engine.runAndWait()

while True:
    say("Что записать?")
    lol = input("Ввод: ")
    handle = open("output.txt", "a")
    handle.write(lol + "\n")
    handle.write("")
    handle.close()
    say("Все верно?")
    os.system("output.txt")
    os.system("start.py")
    break
